<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".module.main.scan.non_transaction.check_detail.CheckTagDetailFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_target"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:elevation="4dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_tag_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:background="@color/red_disconnect">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="Target RFID" />

            <TextView
                android:id="@+id/tv_tag_code_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                style="@style/fragment_check_tag_card_view_holder"
                android:id="@+id/cv_tag"
                app:cardCornerRadius="4dp"
                android:layout_alignParentTop="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail RFID" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            style="@style/fragment_check_tag_textview_header"
                            android:text="Kode RFID" />

                        <TextView
                            style="@style/fragment_check_tag_textview_detail"
                            android:id="@+id/tv_tag_code"/>

                        <TextView
                            style="@style/fragment_check_tag_textview_header"
                            android:text="Status RFID"/>

                        <TextView
                            style="@style/fragment_check_tag_textview_detail"
                            android:id="@+id/tv_tag_status"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_stock"
                style="@style/fragment_check_tag_card_view_holder"
                app:cardCornerRadius="4dp"
                android:layout_below="@id/cv_tag"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail Barang"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            style="@style/fragment_check_tag_textview_header"
                            android:text="Nama Barang"/>

                        <TextView
                            style="@style/fragment_check_tag_textview_detail"
                            android:id="@+id/tv_stock_name"/>

                        <TextView
                            style="@style/fragment_check_tag_textview_header"
                            android:text="ID Barang" />

                        <TextView
                            style="@style/fragment_check_tag_textview_detail"
                            android:id="@+id/tv_stock_id"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                style="@style/fragment_check_tag_linear_layout_content">

                                <TextView
                                    style="@style/fragment_check_tag_textview_header"
                                    android:text="Kode Barang" />

                                <TextView
                                    style="@style/fragment_check_tag_textview_detail"
                                    android:id="@+id/tv_stock_code"/>

                                <TextView
                                    style="@style/fragment_check_tag_textview_header"
                                    android:text="Merek"/>

                                <TextView
                                    style="@style/fragment_check_tag_textview_detail"
                                    android:id="@+id/tv_stock_brand"/>

                            </LinearLayout>

                            <LinearLayout
                                style="@style/fragment_check_tag_linear_layout_content">

                                <TextView
                                    style="@style/fragment_check_tag_textview_header"
                                    android:text="Banyak Unit"/>

                                <TextView
                                    style="@style/fragment_check_tag_textview_detail"
                                    android:id="@+id/tv_stock_unit_count" />


                                <TextView
                                    style="@style/fragment_check_tag_textview_header"
                                    android:text="Tipe Kendaraan"/>

                                <TextView
                                    style="@style/fragment_check_tag_textview_detail"
                                    android:id="@+id/tv_stock_vehicle_type" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/ll_transaction_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:layout_below="@id/cv_stock"
                android:visibility="gone">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="List Transaksi"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp"/>

                <Button
                    android:id="@+id/btn_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:text="Urutan turun"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/light_blue_layout_input"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                style="@style/fragment_check_tag_card_view_holder"
                android:id="@+id/cv_check_in"
                app:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail Masuk Barang"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="@string/kode_faktur" />

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_check_in_code" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Tanggal Masuk"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_check_in_date" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/green_item_transaction_check_in"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/fragment_check_tag_card_view_holder"
                android:id="@+id/cv_check_out"
                app:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail Keluar Barang"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="@string/kode_faktur" />

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_check_out_code" />

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Customer"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_check_out_customer" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Tanggal Keluar"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_check_out_date" />

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Via"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_check_out_delivery" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/light_red_transaction_check_out"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/fragment_check_tag_card_view_holder"
                android:id="@+id/cv_broken"
                app:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail Keluar Barang (Rusak)"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="@string/kode_faktur" />

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_broken_code" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Tanggal Keluar"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_broken_date" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/light_brown_item_transaction_broken"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/fragment_check_tag_card_view_holder"
                android:id="@+id/cv_return"
                app:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail Retur Barang"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="@string/kode_faktur" />

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_return_code" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Tanggal Retur"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_return_date" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/blue_item_transaction_return"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/fragment_check_tag_card_view_holder"
                android:id="@+id/cv_lost"
                app:cardCornerRadius="4dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/fragment_check_tag_textview_title"
                        android:text="Detail Penyesuaian Barang"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="@string/kode_faktur" />

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_lost_code" />

                        </LinearLayout>

                        <LinearLayout
                            style="@style/fragment_check_tag_linear_layout_content">

                            <TextView
                                style="@style/fragment_check_tag_textview_header"
                                android:text="Tanggal Penyesuaian"/>

                            <TextView
                                style="@style/fragment_check_tag_textview_detail"
                                android:id="@+id/tv_lost_date" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/light_yellow_item_transaction_adjust"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Tekan scan untuk mengetahui informasi RFID"
                android:textAlignment="center"
                android:textSize="16sp" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_scan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:text="@string/scan"/>

    </LinearLayout>

</LinearLayout>